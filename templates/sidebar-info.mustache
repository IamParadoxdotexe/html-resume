{{#data}}
    <div class="sidebar__info">
        <strong>{{ title }}</strong>
        <i>{{{ subtitle }}}</i>
        <a href="{{ href }}">{{ link }}</a>
    </div>
{{/data}}

<style>
    .sidebar__info {
        display: flex;
        flex-direction: column;
    }

    .sidebar__info strong {
        margin-bottom: 0.05in;
        font-weight: 500;
    }

    .sidebar__info :not(strong) {
        font-size: var(--font-size-sm);
    }

    .sidebar__info a {
        color: var(--accent-secondary);
    }
</style>
